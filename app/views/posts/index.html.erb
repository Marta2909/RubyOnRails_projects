<div class="posts_list">

  <% @posts.each do |p| %>
    <div class="card mb-3">
      <%= render partial: "postcard", locals: {post: p} %>
      <div class="card-body">
        <p class="card-text"><%= truncate(p.body, length: 100) %></p>
        <%= link_to "Czytaj wiÄ™cej", post_path(p), class: "button" %>
      </div>
    </div>
  <% end %>

</div>

<div class="container pagination justify-content-center" >
<%= paginate @posts %>
</div>
