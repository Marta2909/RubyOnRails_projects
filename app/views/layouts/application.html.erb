<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href='http://fonts.googleapis.com/css?family=Petit+Formal+Script&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Pontano+Sans&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

</head>
  <body>
    <!-- dodanie facebookpowej społeczności -->


    <header>
      <%= render partial: "layouts/header" %>
    </header>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-7">
          <%= yield %>
        </div>
        <div class="col-sm-3">
          <%= render partial: "layouts/sidebar" %>
        </div>
        <div class="col-sm-1"></div>
    </div>
  </div>

  <footer class="footer">
    <%= render partial: "layouts/footer" %>
  </footer>

  </body>
</html>
